<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_photo_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.minerva.unsplashapi.common.ui.AdaptiveImageView
        android:id="@+id/item_photo_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />


    <TextView
        android:id="@+id/item_photo_title"
        style="@style/subtitle_text"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/little_margin"
        android:shadowColor="@color/colorTextDark2nd"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:singleLine="true"
        android:text="By Gao Ge, On 2016-10-24"
        android:textColor="@color/colorTextLight" />

</RelativeLayout>